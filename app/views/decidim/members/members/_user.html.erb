<div class="column">
  <article class="card card--process">
    <%= link_to user.profile_path, class: "card__link" do %>
      <div class="card__image-top"
           style="background-image:url(<% if user.avatar.attached? %><%= url_for user.avatar.url only_path: true %><% end %>)"></div>
    <% end %>
    <div class="card__content">
      <%= link_to user.profile_path, class: "card__link" do %>
        <h4 class="card__title"><%= user.name %></h4>
      <% end %>
    </div>
  </article>
</div>
